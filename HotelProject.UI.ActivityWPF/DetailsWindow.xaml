<Window x:Class="HotelProject.UI.ActivityWPF.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelProject.UI.ActivityWPF"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Column="0" Grid.Row="0" Name="ActivityDataGrid" Grid.ColumnSpan="2" Margin="5" IsReadOnly="True"/>
        <Button Grid.Column="0" Grid.Row="1" Name="BackButton" Content="Back" Margin="5" Click="BackButton_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Name="AddButton" Content="Add an activity" Margin="5" Click="AddButton_Click"/>
    </Grid>
</Window>
